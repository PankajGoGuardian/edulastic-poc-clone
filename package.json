{
  "name": "edulastic",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx",
    "lint-fix": "eslint . --ext .js --fix",
    "build-server": "rimraf .build/ && babel ./src/server --out-dir .build/server/ --copy-files",
    "build-client": "webpack --mode production",
    "build": "npm run build-server && npm run build-client",
    "start-build": "NODE_ENV=localhost APP_MOCKS=0 node ./.build/server/app",
    "start-server": "SERVICE_HOST=0.0.0.0:3001 NODE_ENV=localhost APP_MOCKS=0 APP_MODE_DEV=1 babel-watch src/server/app --ignore src/client",
    "start-client": "webpack-dev-server --mode development",
    "start": "node start.js",
    "server-dev": "nodemon --exec babel-node -- ./src/server/app.js"
  },
  "dependencies": {
    "antd": "^3.10.7",
    "aws-sdk": "^2.355.0",
    "axios": "^0.18.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "brace": "^0.11.1",
    "connected-react-router": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-boom": "^2.0.0",
    "express-pino-logger": "^4.0.0",
    "faker": "^4.1.0",
    "font-awesome": "^4.7.0",
    "handlebars": "^4.0.12",
    "history": "^4.7.2",
    "http-proxy-middleware": "^0.19.0",
    "joi": "^14.0.6",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.11",
    "multer": "^1.4.1",
    "multer-s3": "^2.9.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0-alpha.0",
    "react-ace": "^6.2.0",
    "react-autosize-textarea": "4.0.0",
    "react-beautiful-dnd": "^9.0.2",
    "react-click-outside": "^3.0.1",
    "react-color": "^2.14.1",
    "react-dev-utils": "^5.0.2",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^5.0.1",
    "react-dom": "^16.7.0-alpha.0",
    "react-drag-and-drop": "^2.4.0",
    "react-icons": "^3.1.0",
    "react-notifications": "^1.4.3",
    "react-quill": "^1.3.1",
    "react-redux": "^5.1.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-hash-link": "^1.2.1",
    "react-sortable-hoc": "^0.8.3",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.5",
    "redux-saga": "^0.16.2",
    "reselect": "^3.0.1",
    "styled-components": "^3.4.5",
    "swagger-jsdoc": "^3.2.3",
    "swagger-ui-express": "^4.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-watch": "^2.0.7",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "node-sass": "^4.10.0",
    "rimraf": "^2.6.2",
    "sass-extract": "^2.1.0",
    "sass-extract-js": "^0.4.0",
    "sass-extract-loader": "^1.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.25.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
