{
  "manifest_version": 2,
  "name": "Edu Meet",
  "version": "0.4.15",
  "description": "Google Meet Emoji Reactions Extension",
  "content_scripts": [
    {
      "matches": ["*://meet.google.com/**-**-**", "*://*.snapwiz.net/*"],
      "js": ["content.js", "muteInject.js"]
    }
  ],
  "web_accessible_resources": ["content.js", "bundle.js", "*.bundle.js", "img/*", "muteInject.js"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "img/128x128.png"
  },
  "permissions": [
    "https://*.google.com/",
    "*://*.snapwiz.net/*",
    "*://*.segment.io/*",
    "storage",
    "activeTab",
    "background",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "externally_connectable": {
    "matches": ["*://meet.google.com/**-**-**", "http://localhost:3001/*"]
  },
  "optional_permissions": ["notifications", "*://meet.google.com/**-**-**"],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
